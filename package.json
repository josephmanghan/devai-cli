{
  "name": "devai-cli",
  "version": "0.4.0",
  "description": "Local-first CLI tool for AI-powered git commit message generation using Ollama",
  "type": "module",
  "bin": {
    "devai-cli": "./dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsup --tsconfig tsconfig.build.json",
    "dev": "tsx src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "test": "vitest run",
    "test:unit": "vitest run --dir src",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "vitest run --dir tests/e2e",
    "test:demo": "tsx scripts/run-demos.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "pr": "npm run format && npm run lint && npm run typecheck && npm run test && npm run build",
    "pr:lite": "npm run format && npm run lint && npm run typecheck && npm run test:unit && npm run build",
    "validate:setup": "tsx scripts/validate-setup.ts",
    "build:link": "devai-cli setup && npm run build && npm link",
    "unlink": "npm unlink devai-cli",
    "release:prep": "rm -rf dev docs .prompt-assets",
    "postinstall": "echo 'âœ… devai-cli installed! Run \"devai-cli setup\" to complete configuration.'"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.10.1",
    "@types/ora": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.0.0",
    "prettier-plugin-embed": "^0.5.0",
    "tsup": "latest",
    "tsx": "latest",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "keywords": [
    "git",
    "commit",
    "cli",
    "ollama",
    "ai",
    "conventional-commits"
  ],
  "author": "Dr Joe (Joseph Manghan)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmanghan/devai-cli"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "14.0.2",
    "debug": "^4.4.3",
    "execa": "^9.6.1",
    "ollama": "^0.6.3",
    "ora": "^9.0.0"
  }
}
